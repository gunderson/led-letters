doctype html
html(lang="en")
	head
		link(rel="stylesheet", href="/css/style.css")
	head
	body 
		header 
			h1 Led Letters Monitor & Controller
		canvas#display(width=800, height=600)
		
		.controls
			button#playpause Play / Pause
			input#speed(type='range', min=0, max=1, step=0.01, value=0.5)
			#uploadImages
			select#mode-selector(name="mode-selector") 
				option(value="solidColorMode") Solid Color
				option(value="slideImageXMode") Slide Image X
				option(value="slideImageYMode") Slide Image Y

		.portPicker

		.mode.solidColorMode
			//- add color picker
		.mode.slideImageXMode
		.mode.slideImageYMode
			form#uploadImageForm(enctype='multipart/form-data')
				input#uploadImageFile(type="file")
				button#uploadButton Upload 
		main 
		footer 
	script(type="text/javascript", src="js/banner.js")
	script(type="text/javascript", src="/socket.io/socket.io.js")
	script(type="text/javascript", src="js/main.js")